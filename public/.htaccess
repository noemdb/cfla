<IfModule mod_negotiation.c>
    Options -MultiViews -Indexes
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On

    # -------------------------------------------------
    # 1. Seguridad básica
    # -------------------------------------------------

    # Desactivar listado de directorios
    Options -Indexes

    # Bloquear ejecución de PHP fuera de index.php
    <FilesMatch "\.(php|phtml|php5|php7|phar)$">
        Require all denied
    </FilesMatch>

    <Files "index.php">
        Require all granted
    </Files>

    # -------------------------------------------------
    # 2. Bloquear extensiones usadas para malware
    # -------------------------------------------------
    <FilesMatch "\.(wbmp|fla|dat|log|sh)$">
        Require all denied
    </FilesMatch>

    # -------------------------------------------------
    # 3. Proteger carpetas de assets
    # -------------------------------------------------
    RewriteRule ^(images|image|videos|pwa|uploads|storage)/ - [F,L]

    # -------------------------------------------------
    # 4. Manejo Authorization Header (Laravel / APIs)
    # -------------------------------------------------
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # -------------------------------------------------
    # 5. Redirección de trailing slash
    # -------------------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # -------------------------------------------------
    # 6. Front Controller Laravel
    # -------------------------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
